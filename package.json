{
  "name": "spaces",
  "version": "0.1.0",
  "author": "Henry Charlton",
  "license": "ISC",
  "type": "module",
  "scripts": {
    "start": "tsx src/main.ts",
    "new-api": "tsx src/new-api.ts",
    "repl": "tsx src/repl.ts",
    "build": "rimraf dist && tsc -b ./tsconfig.json && chmod +x ./dist/new-api.js",
    "test": "vitest",
    "format": "prettier . --write",
    "lint": "eslint .",
    "git-hook-install": "simple-git-hooks"
  },
  "bin": {
    "spaces": "dist/new-api.js"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^20.11.16",
    "@vitest/coverage-v8": "^1.6.0",
    "eslint": "^8.57.0",
    "globals": "^15.0.0",
    "prettier": "^3.2.5",
    "pretty-quick": "^4.0.0",
    "rimraf": "^5.0.5",
    "simple-git-hooks": "^2.9.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^7.7.0",
    "vitest": "^1.6.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npx pretty-quick --staged --check && npx eslint ."
  },
  "dependencies": {
    "@types/inquirer": "^9.0.7",
    "chalk": "^5.3.0",
    "inquirer": "^9.2.19",
    "yaml": "^2.4.3"
  }
}
